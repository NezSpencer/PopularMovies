<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_circle_text1"
            android:background="@drawable/circled_text"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_reviewer_name"
            android:layout_alignBaseline="@+id/tv_circle_text1"
            android:layout_toEndOf="@+id/tv_circle_text1"
            android:layout_toRightOf="@+id/tv_circle_text1"
            android:layout_marginLeft="@dimen/inter_block_margin"
            android:layout_marginStart="@dimen/inter_block_margin"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_review"
            android:textSize="@dimen/body_text_size"
            android:layout_alignStart="@+id/tv_reviewer_name"
            android:layout_alignLeft="@+id/tv_reviewer_name"
            android:layout_below="@+id/tv_reviewer_name"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>