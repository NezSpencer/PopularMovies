<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/card_movie_details"
                android:layout_marginBottom="16dp"
                app:cardElevation="5dp"
                android:padding="3dp"
                app:cardCornerRadius="0dp">


                <ImageView
                        android:id="@+id/movie_image"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


        </android.support.v7.widget.CardView>

        <ScrollView android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/card_movie_details"
                    android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_release_date"
                        android:textSize="20sp"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/btn_rating"
                        android:src="@drawable/ic_action_important"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_action_important"
                        android:layout_alignStart="@+id/tv_title"
                        android:layout_alignLeft="@+id/tv_title"
                        android:layout_below="@+id/tv_release_date"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_rating_score"
                        android:layout_toEndOf="@+id/btn_rating"
                        android:layout_toRightOf="@+id/btn_rating"
                        android:layout_below="@id/tv_release_date"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:layout_alignBaseline="@+id/btn_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_synopsis"
                        android:textSize="22sp"
                        android:text="Synopsis"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_rating_score"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_summary"
                        android:textSize="18sp"
                        android:layout_below="@+id/tv_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </ScrollView>



    </RelativeLayout>