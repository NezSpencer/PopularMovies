<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#EEEEEE"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent">

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                app:cardElevation="5dp"
                app:cardCornerRadius="0dp">


            <ImageView
                    android:id="@+id/movie_image"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/tv_title"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_release_date"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/btn_rating"
                    android:src="@drawable/ic_action_important"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:background="@drawable/ic_action_important"
                    android:layout_below="@+id/tv_release_date"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_rating_score"
                    android:layout_toEndOf="@+id/btn_rating"
                    android:layout_toRightOf="@+id/btn_rating"
                    android:layout_below="@id/tv_release_date"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/btn_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/tv_summary"
                    android:textSize="20sp"
                    android:layout_below="@+id/tv_rating_score"
                    android:layout_marginTop="16dp"
                    android:text="jjjjjjjj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>




    </LinearLayout>