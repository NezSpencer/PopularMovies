<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/inter_block_margin"
        android:background="#EEEEEE"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent">

    <View
        android:layout_weight="1"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="@dimen/inter_block_margin"
                android:layout_weight="2"
                app:cardElevation="@dimen/default_card_elevation">


            <ImageView
                    android:id="@+id/movie_image"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <RelativeLayout
                android:layout_weight="2"
                android:layout_width="@dimen/zero_dp"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/inter_block_margin"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/inter_view_margin"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_release_date"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginBottom="@dimen/inter_view_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/btn_rating"
                    android:src="@drawable/ic_action_important"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/normal_text_size"
                    android:background="@drawable/ic_action_important"
                    android:layout_below="@+id/tv_release_date"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_rating_score"
                    android:layout_toEndOf="@+id/btn_rating"
                    android:layout_toRightOf="@+id/btn_rating"
                    android:layout_below="@id/tv_release_date"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/btn_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/tv_summary"
                    android:textSize="@dimen/body_text_size"
                    android:layout_below="@+id/tv_rating_score"
                    android:layout_marginTop="@dimen/normal_text_size"
                    tools:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>




    </LinearLayout>